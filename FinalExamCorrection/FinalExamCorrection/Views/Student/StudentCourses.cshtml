@{
    List<Course> courses = ViewBag.courses;
}

<div class="container">
    <h1 class="text-center">Enrolled Courses</h1>

    <ul class="list-group">
        @foreach (Course course in courses)
        {
            <li class="list-group-item">@course.CourseName</li>
        }
    </ul>
</div>
<a asp-action="Home" class="btn btn-outline-secondary">Back to Home</a>

